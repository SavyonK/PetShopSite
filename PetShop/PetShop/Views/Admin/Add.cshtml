@model PetShop.ViewModels.AdminAddViewModel
@{
    ViewBag.Title = "Add";
}

<h1>Add</h1>

<form asp-action="Add" asp-controller="Admin" method="post" enctype="multipart/form-data">
    <table style="width:500px">

        <tr>
            <th> <label asp-for="Name"></label> </th>
            <th>
                <div class="form-group">
                    <input type="text" asp-for="Name"  autofocus required />
                    <span asp-validation-for="Name"></span>
                </div>
            </th>
        </tr>
        <tr>
            <th> <label asp-for="Age"></label> </th>

            <th>
                <div class="form-group">
                    <input type="number" asp-for="Age" required />
                    <span asp-validation-for="Age"></span>
                </div>
            </th>
        </tr>
        <tr>
            <th> <label asp-for="Description"></label> </th>

            <th>
                <div class="form-group">
                    <textarea rows="2" asp-for="Description" ></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </th>
        </tr>
        <tr>
            <th> <label asp-for="CategoryID"></label> </th>

            <th>
                <div class="form-group">
                    <select asp-for="CategoryID" asp-items="ViewBag.Categories" required></select>
                    <span asp-validation-for="CategoryID"></span>
                </div>
            </th>
        </tr>
        <tr>
            <th> <label asp-for="ProfileImage"></label> </th>

            <th>
                <div class="form-control">
                    <input asp-for="ProfileImage" />
                    <span asp-validation-for="ProfileImage"></span>
                </div>
            </th>
        </tr>

        <tr>
            <th>
                <button type="submit">Submit</button>

            </th>
        </tr>


    </table>
</form>
